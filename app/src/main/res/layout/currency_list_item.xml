<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_8">

    <TextView
        android:id="@+id/currency_description"
        style="@style/textGeneral"
        android:layout_weight="4"
        android:text="Долар" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bid_changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_drop_up_accent" />

            <TextView
                android:id="@+id/bid_value"
                style="@style/textSmall"
                android:textColor="@color/accent"
                android:text="27.0021" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ask_changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_drop_down" />

            <TextView
                android:id="@+id/ask_value"
                style="@style/textSmall"
                android:textColor="@color/primary"
                android:text="26.0012" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>